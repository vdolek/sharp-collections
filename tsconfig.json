{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "lib": ["es5", "es2015.iterable", "dom"],
    "declaration": true,
    "outDir": "./dist",
    "downlevelIteration": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
