{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "lib": ["es5", "es2015.iterable", "es2015.collection"],
    "declaration": true,
    "outDir": "./dist",
    "downlevelIteration": true,
    "strict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
